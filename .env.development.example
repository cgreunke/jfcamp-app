# ============== DEV ENV (BEISPIEL) ==============

# --- DB ---
DRUPAL_DB_HOST=postgres
DRUPAL_DB_NAME=drupal
DRUPAL_DB_USER=drupal
DRUPAL_DB_PASS=drupal

# --- Site / Admin (nur initial) ---
DRUPAL_SITE_NAME=JF Startercamp - App (Dev)
DRUPAL_ADMIN_USER=admin
DRUPAL_ADMIN_PASS=admin
DRUPAL_ADMIN_MAIL=admin@example.com

# --- Host & Proxy ---
DRUPAL_BASE_URL=http://drupal
DRUPAL_TRUSTED_HOSTS=^drupal$,^localhost$,^127\.0\.0\.1$
DRUPAL_REVERSE_PROXY=0
# Für lokales Reverse Proxy Testing kannst du aktivieren:
# DRUPAL_REVERSE_PROXY=1
# DRUPAL_REVERSE_PROXY_ADDRESSES=172.18.0.10
# DRUPAL_REVERSE_PROXY_TRUSTED_HEADERS=X_FORWARDED_FOR,X_FORWARDED_HOST,X_FORWARDED_PORT,X_FORWARDED_PROTO

# --- API User für Matching ---
DRUPAL_API_USER=apiuser
DRUPAL_API_PASS=apipassword
DRUPAL_API_ROLE=api_writer
DRUPAL_API_MAIL=apiuser@example.com

# --- Matching-Service ---
MATCHING_BASE_URL=http://matching:5001

# --- Matching-Container ENV ---
DRUPAL_URL=http://drupal/jsonapi
DRUPAL_USER=apiuser
DRUPAL_PASS=apipassword
MATCHING_SEED=2027
HTTP_TIMEOUT=10
PAGE_CHUNK=100
MAX_PAGES=1000
PUBLISHED_ONLY=1
LOG_LEVEL=INFO

# --- Sonstiges Build/Install ---
# DRUPAL_INSTALL=auto   # auto|skip
