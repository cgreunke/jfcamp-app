# .env.example (Projekt-Root)
# Wird von docker-compose für den Matching-Service geladen

# Aus Sicht des Matching-Containers! (Service-Name des Drupal-Containers)
DRUPAL_URL=http://drupal/jsonapi

# Basic Auth für Drupal (User "apiuser" mit Rolle api_writer)
DRUPAL_USER=apiuser
DRUPAL_PASS=changeme

# Optional: fester Seed für deterministische Tie-Breaks über Deploys/Neuimporte hinweg
MATCHING_SEED=2027

# Optional: Särkere Streuung der Zuteilungen
PER_ROUND_PER_WS_LIMIT=1

# Netzwerk-/HTTP/Logging
HTTP_TIMEOUT=10
MAX_PAGE_LIMIT=2000
LOG_LEVEL=INFO
