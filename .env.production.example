# ============== PROD ENV (BEISPIEL) ==============

# --- DB ---
DRUPAL_DB_HOST=postgres
DRUPAL_DB_NAME=drupal
DRUPAL_DB_USER=drupal
DRUPAL_DB_PASS=PLEASE_CHANGE_ME

# --- Site / Admin (nur initial) ---
DRUPAL_SITE_NAME=JF Startercamp
DRUPAL_ADMIN_USER=admin
DRUPAL_ADMIN_PASS=PLEASE_CHANGE_ME
DRUPAL_ADMIN_MAIL=admin@camp.example.org

# --- Host & Proxy ---
DRUPAL_BASE_URL=https://camp.example.org
DRUPAL_TRUSTED_HOSTS=^camp\.example\.org$,^www\.example\.org$
DRUPAL_REVERSE_PROXY=1
DRUPAL_REVERSE_PROXY_ADDRESSES=10.0.0.10,10.0.0.11
DRUPAL_REVERSE_PROXY_TRUSTED_HEADERS=X_FORWARDED_FOR,X_FORWARDED_HOST,X_FORWARDED_PORT,X_FORWARDED_PROTO
# Optional, falls Systeme den Host erzwingen sollen:
# DRUPAL_CANONICAL_HOST=camp.example.org

# --- API User f√ºr Matching ---
DRUPAL_API_USER=apiuser
DRUPAL_API_PASS=CHANGE_ME
DRUPAL_API_ROLE=api_writer
DRUPAL_API_MAIL=apiuser@camp.example.org

# --- Matching-Service ---
MATCHING_BASE_URL=https://matching.camp.example.org

# --- Matching-Container ENV ---
DRUPAL_URL=https://camp.example.org/jsonapi
DRUPAL_USER=apiuser
DRUPAL_PASS=CHANGE_ME
MATCHING_SEED=2027
HTTP_TIMEOUT=10
PAGE_CHUNK=100
MAX_PAGES=2000
PUBLISHED_ONLY=1
LOG_LEVEL=INFO

# --- Sonstiges Build/Install ---
# DRUPAL_INSTALL=auto   # auto|skip
