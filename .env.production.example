# ============== PROD ENV ==============

# --- DB ---
DRUPAL_DB_HOST=postgres
DRUPAL_DB_PORT=5432
DRUPAL_DB_NAME=drupal
DRUPAL_DB_USER=drupal
DRUPAL_DB_PASS=PLEASE_CHANGE_ME

# --- Site / Admin (nur initial) ---
DRUPAL_SITE_NAME=JF Startercamp - App
DRUPAL_ADMIN_USER=admin
DRUPAL_ADMIN_PASS=PLEASE_CHANGE_ME
DRUPAL_ADMIN_MAIL=admin@camp.example.org

# --- Trusted Hosts & Reverse Proxy (WICHTIG!) ---
# Passe die Hosts an deine Domains an (Regex!)
DRUPAL_TRUSTED_HOSTS=^camp\.example\.org$,^www\.example\.org$
DRUPAL_REVERSE_PROXY=1
# IP(s) deines Upstream-Proxys/Loadbalancers (kommagetrennt)
DRUPAL_REVERSE_PROXY_ADDRESSES=10.0.0.10,10.0.0.11
# Standard-Headermapping f체r Proxies
DRUPAL_REVERSE_PROXY_TRUSTED_HEADERS=X_FORWARDED_FOR,X_FORWARDED_HOST,X_FORWARDED_PROTO,X_FORWARDED_PORT,FORWARDED

# --- Base URLs (optional, f체r Skripte/Frontend) ---
DRUPAL_BASE_URL=https://camp.example.org

# --- Config Mgmt ---
CONFIG_SYNC_DIRECTORY=/opt/drupal/config/sync
# In PROD NIE automatisch importieren
DRUPAL_AUTO_IMPORT_ON_START=0
DRUPAL_INSTALL_PROFILE=minimal
# Optional (sonst generiert das Startscript persistent):
# DRUPAL_HASH_SALT=PUT_A_LONG_RANDOM_HEX

# --- Matching-Service (Drupal-Seite) ---
# Interner Service-Name aus Compose
MATCHING_BASE_URL=http://matching:5001

# --- API User f체r Matching (wird von jf-roles.sh angelegt) ---
DRUPAL_API_USER=apiuser
DRUPAL_API_PASS=PLEASE_CHANGE_ME
DRUPAL_API_ROLE=api_writer
DRUPAL_API_MAIL=apiuser@camp.example.org

# --- Matching-Container ENV (gegen PROD-Drupal) ---
DRUPAL_URL=http://drupal/jsonapi
DRUPAL_USER=${DRUPAL_API_USER}
DRUPAL_PASS=${DRUPAL_API_PASS}
MATCHING_SEED=2027
HTTP_TIMEOUT=20
PAGE_CHUNK=100
MAX_PAGES=2000
PUBLISHED_ONLY=1
LOG_LEVEL=INFO


VITE_BASE=/
# Optional, falls Frontend auf anderer Domain l채uft:
# VITE_API_BASE=https://app.deine-domain.tld