# --------------------------
# Node / Vue
# --------------------------
# root-weit & rekursiv ignorieren
**/node_modules/
**/dist/
**/dist-ssr/
.vitepress/
*.log
logs/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# --------------------------
# Drupal (Composer + Webroot)
# --------------------------
drupal/vendor/
drupal/web/core/
drupal/web/modules/contrib/
drupal/web/themes/contrib/
drupal/web/profiles/

# Public & Private Files (Webroot)
drupal/web/sites/default/files/
drupal/web/sites/default/private/

# Optionaler Projekt-"private"-Ordner (außer Platzhalter)
private/
!private/.gitkeep

# Lokale Settings (DEV-only)
drupal/web/sites/default/settings.local.php

# Core-Installer legt manchmal zufällige Config-Exportverzeichnisse an → niemals committen
drupal/web/sites/default/files/config_*/sync/

# Config-Management: wird versioniert! (NICHT ignorieren)
# drupal/config/sync/ bleibt erlaubt

# --------------------------
# Composer / Drush
# --------------------------
composer.phar
drush/
.drush/
.drushrc.php

# --------------------------
# Python (Matching)
# --------------------------
**/__pycache__/
*.pyc
.pytest_cache/
matching/venv/
venv/

# --------------------------
# Docker / Volumes
# --------------------------
db_data/

# --------------------------
# IDE / OS
# --------------------------
# global & verschachtelt
**/.DS_Store
.vscode/
.idea/

# --------------------------
# Environment Files
# --------------------------
# globale .env-Dateien ignorieren
.env
.env.local

# env-Dateien überall ignorieren (Dev/Prod), außer Beispielen
**/.env
**/.env.*
!**/.env.example

# explizite Beispiel-Dateien erlauben (falls vorhanden)
!.env.development.example
!.env.production.example

